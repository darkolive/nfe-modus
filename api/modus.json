{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "connections": {
    "my-dgraph": {
      "type": "dgraph",
      "grpcTarget": "localhost:9080"
    },
    "resend": {
      "type": "http",
      "baseUrl": "https://api.resend.com/emails/",
      "headers": {
        "Authorization": "Bearer {{EMAIL_API_KEY}}"
      }
    },
    "iphub": {
      "type": "http",
      "baseUrl": "https://v3.iphub.info/",
      "headers": {
        "Authorization": "Bearer {{IPHUB_API_KEY}}"
      }
    }
  }
}
